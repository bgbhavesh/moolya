doctype html
html
  head
    meta(charset='utf-8')
    title Untitled Document
    link(href='css/ms_styles.css', type='text/css', media='all', rel='stylesheet')
    link(href='css/swiper.min.css', type='text/css', media='all', rel='stylesheet')
  body
    mixin space()
      | !{' '}
    .ms_main_wrap
      .ms_header
        .header_left
          .shape1
          img(src='images/logo.png')
        .header_right
          img(src='images/ecosystem.png')
          img(src='images/patent.png')
          span.web_url
            a(href='http://www.moolya.global')
              | www.
              span.m_red m
              span.m_yel oo
              span.m_red lya
              | .global
      .ms_content_wrap
        .content_left
          .profile_pic
            img(src=profilePic)
        .content_right
          h2
            | #{firstName} #{lastName} / an '#{communityType}' on #{space}
            span.m_red m
            span.m_yel oo
            span.m_red lya
            | / #{chapterName} / #{clusterName}
          ul.ms_menu
            each list, i in listView
              li
                -if (pathName == list.link )
                 a.ms_btn_ye.active_menu(href= list.link) #{list.name}
                -else
                 a.ms_btn_ye(href= list.link) #{list.name}
            li
          // Swiper
          .ms_swiper
            .swiper-container
              .swiper-wrapper
                each slide , i in management
                  .swiper-slide
                    img(src=slide.logo)
                    .profile_info
                      h5 #{slide.firstName} #{slide.lastName}
                      h6 #{slide.designation}
                      p
                        | Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,
                        | standard dummy text ever since the 1500s,Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,
                    span.expand_info
              // Add Pagination
              // <div class="swiper-pagination"></div>
              // Add Arrows
            .swiper-button-next
            .swiper-button-prev
          // Swiper Ends
          .register_block
            p
              strong
                | To view more details and to collaborate with #{space}
                span.m_red #{firstName} #{lastName}
            a.ms_btn_re(href='/login') Login
            |  or
            a.ms_btn_re(href='/register') Register
            br
            b
              | on #{space}
              span.m_red m
              span.m_yel oo
              span.m_red lya
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    script(type='text/javascript', src='js/swiper.min.js')
    script.
      var swiper = new Swiper('.swiper-container', {
        pagination: '.swiper-pagination',
        slidesPerView: 4,
        paginationClickable: true,
        spaceBetween: 10,
        keyboardControl: true,
        nextButton: '.swiper-button-next',
        prevButton: '.swiper-button-prev',
        //loop: true
      });
      $('.expand_info').click(function(){
        $(this).parent().find('.profile_info').toggleClass('open');
        $(this).toggleClass('collapse');
      });
    script(src="js/swiper.min.js")


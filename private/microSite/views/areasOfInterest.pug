if(!privateFields.areaOfInterest)
  if(areaOfInterest && areaOfInterest.length >0)
    .ms_swiper
      .swiper-container
        .swiper-wrapper
          each slide , i in areaOfInterest
            .swiper-slide
              img(src=slide.logo)
              .profile_info
                h5 #{slide.industryTypeName}
      .swiper-button-next
      .swiper-button-prev
  else
    .ms_noBranches
      img(src='/images/branches_banner.png')
else
  h2 Private Content

// Swiper Ends

script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
script(type='text/javascript', src='/js/swiper.min.js')
script.
  var swiper = new Swiper('.swiper-container', {
    pagination: '.swiper-pagination',
    slidesPerView: 4,
    paginationClickable: true,
    spaceBetween: 10,
    keyboardControl: true,
    nextButton: '.swiper-button-next',
    prevButton: '.swiper-button-prev',
    //loop: true
  });
  $('.expand_info').click(function () {
    $(this).parent().find('.profile_info').toggleClass('open');
    $(this).toggleClass('collapse');
  });
script(src="/js/swiper.min.js")

